type Query {
  findSource(id: ID): Source
}

scalar Date

type Source {
  id: ID!,
  name: String!,
  releaseDate: Date!,
  productLine: ProductLine!,
  link: String!,
  errataDate: Date,
  errataVersion: Float,
  errataLink: String
}

enum ProductLine {
  RULEBOOK
  SOCIETY
  LOSTOMENS
  BLOG
  COMIC
  ADVENTURE
  ADVENTUREPATH
}